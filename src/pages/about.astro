--- 
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro'
const data = await fetch("https://jsonplaceholder.typicode.com/comments").then(res => res.json())

---

<Layout title="welcome to about page">
    <main>
        <h1 class="capitalize text-center mb-4 text-xl font-bold">about page</h1>
        <div class="grid grid-cols-4 gap-4">
            {data.map((item:any) => (
            <Card href={item?.id} title={item?.name} body={item?.body} />

        ))}
        </div>
    </main>
</Layout>